pipeline {
    agent { label 'MV-Nodo1' }
    environment {
        scannerHome = tool name: 'sonar-scanner'
        SONAR_TOKEN = credentials('SONAR_CLOUD_TOKEN')
    }
    stages {
        stage('Obtener el proyecto') {
            steps {
                git branch: 'example-rafa', poll: false, url: 'https://github.com/RafaelRamos93/1640-LOCAL-ORDER-ADMI.git'
            }
        }
        stage('Scanner cobol') {
            steps {
                withSonarQubeEnv('sonar-scanner') {
                    dir ('Codigo/Cobol') {
                        //sh 'echo $SONAR_SCANNER'
                        sh """
                        $SONAR_SCANNER \
                        -Dsonar.login=${SONAR_TOKEN} \
                        -X
                        """
                    }
                }
            }
        }
        stage('Regresar ala carpeta C++') {
            steps {
                script {
                    dir('Codigo/C++') {
                        sh 'pwd'
                        sh 'chmod +x ./compile.sh'
                        sh 'ls -a'
                        sh '$BUILD_WRAPPER/build-wrapper-linux-x86-64 --out-dir bw-output ./compile.sh'
                        sh  """
                            $SONAR_SCANNER \
                            -Dsonar.login=${SONAR_TOKEN} \
                            -X
                            """
                    }
                }
            }
        }
    }
}
